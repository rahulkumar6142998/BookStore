@model UserRegistrationModel
<link href="~/css/UserRegistration.css" rel="stylesheet" />





@*<button onclick="openPopup()">Open Popup</button>*@

<form asp-action="Registration" asp-controller="User" method="post" enctype="multipart/form-data" class="form_wrapper">

    <div class="title_container">
        <h2>Create your account</h2>
    </div>
    <div class="row">
        <div class="col_half">
            <div class="input_field">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

        </div>
        <div class="col_half">
            <div class="input_field">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="input_field">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="input_field">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="input_field">
        <label asp-for="ConfirmedPassword"></label>
        <input asp-for="ConfirmedPassword" class="form-control" />
        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
    </div>

    <div class="input_field">
        <input type="submit" value="Register">
    </div>
</form>


<div id="popup">
    <div class="popup-content">
        @if (ViewBag.AlreadyRegistered > 0)
        {
            <p>A Verification Link Sent To Your E-Mail Id</p>
         }
        else
        {
            <p>E-Mail Already Registered. Please Enter Another E-Mail </p>
        }
     <form  asp-action="Registration" asp-controller="User" method="get">
        <div><button type="submit" class="btn btn-success">OK</button></div>
    </form>
    </div>
</div>

@if (ViewBag.SuccessMessage > 0)
{
    <script>
            document.getElementById("popup").style.display = "block";
    </script>
}