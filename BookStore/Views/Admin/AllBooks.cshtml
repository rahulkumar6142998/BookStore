@model IEnumerable<BookStore.Models.BookModel>
<link href="~/css/AllBook.css" rel="stylesheet" />
<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@book.Author</h6>
                    <p class="card-text">@book.Genre</p>

                </div>
            </div>
            <form asp-action="Delete" asp-route-id="@book.Id" method="post">

                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteBookModal">Delete</button>

            </form>
        </div>
        <div class="modal fade" id="deleteBookModal" tabindex="-1" aria-labelledby="deleteBookModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-sm">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="deleteBookModalLabel">Delete Book</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this book?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <form asp-action="Delete" asp-route-id="@book.Id" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    }
</div>


@section Scripts {
    <script>
        function deleteBook() {
            $('#deleteBookModal form').submit();
        }
        $(document).ready(function () {
            $('#deleteBookModal').on('show.bs.modal', function (e) {
                $(this).addClass('animated bounceIn');
            });
        });
    </script>
   
}