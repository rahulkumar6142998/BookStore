    <script type="text/javascript">
        var p1 = document.getElementById('BookId').value;
        console.log(p1);
        function redirectToDetailPage() {

            $.ajax({
                url: '/BookDetail/Details',
                type: 'GET',
                data: { bookId: p1 },
                success: function (response) {
                    // Handle successful response

                },
                error: function (xhr) {
                    // Handle error response
                }
            });
        }


    </script>
}