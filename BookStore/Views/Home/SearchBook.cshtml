@model IEnumerable<BookStore.Models.BookModel>
@using Microsoft.AspNetCore.Http;

@{
    var userId = Context.Session.GetString("userId");
}
<link href="~/css/SearchBook.css" rel="stylesheet" />

@if (ViewBag.Count > 0)
{
    <div>
        <p>@ViewBag.Count Books Found</p>
    </div>
}
else
{

    <div>
        <div class="card-notfound">
            <div class="card-body-notfound">


                <h6 class="card-subtitle mb-2 text-muted">No Book found </h6>
                <p>Try to search with another key word</p>

            </div>
        </div>
    </div>
}
<div class="row">
    @foreach (var book in Model)
    {

        <div class="col-lg-4 col-sm-6 mb-4">
            <div class="card">
                @if (book.Image != null)
                {
                    <img src="@book.Image" class="card-img-top" style="height: 150px; object-fit: cover;">
                }
                else
                {
                    <img src="~/css/book.jpg" class="card-img-top" style="height: 150px; object-fit: cover;">
                }
                <div class="card-body">
                    <h5 class="card-title" style="font-size: 1rem; font-weight: bold;">@book.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted" style="font-size: 0.9rem;">@book.Author</h6>
                    <p class="card-text" style="font-size: 0.8rem;">@book.Price</p>

                    @if (userId != null)
                    {
                        <form method="post" asp-action="AddToCart" asp-controller="Cart">
                            <input type="hidden" name="BookId" value="@book.Id">
                            <button type="submit" class="btn btn-success btn-sm mr-2 addToCart" style="font-size: 0.8rem;">
                                Add to Cart
                            </button>
                        </form>
                    }

                    <form method="get" asp-action="Details" asp-controller="BookDetail">
                        <input type="hidden" name="BookId" value="@book.Id">
                        <button type="submit" class="btn btn-outline-secondary btn-sm" style="font-size: 0.8rem;">
                            View Detail
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
